{
    "name": "acm-hack-chrome-extension",
    "description": "canvas transcript summarizer",
    "version": "0.0.1",
    "homepage": "http://chrome.google.com/webstore",
    "author": "Scott",
    "repository": {
        "type": "git",
        "url": "github.com/ssemtner/chrome-extension-workshop"
    },
    "scripts": {
        "start": "xt-build -e dev -w",
        "start:firefox": "xt-build -e dev -p firefox -w",
        "build": "xt-build -e prod",
        "build:firefox": "xt-build -e prod -p firefox",
        "clean": "xt-clean",
        "docs": "xt-docs",
        "test": "xt-test",
        "coverage": "nyc --reporter=lcov npm run test",
        "sync": "xt-sync"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "eslintIgnore": [
        "test/**/*"
    ],
    "devDependencies": {
        "extension-cli": "latest"
    },
    "xtdocs": {
        "source": {
            "include": [
                "README.md",
                "src"
            ]
        }
    },
    "xtbuild": {
        "js_bundles": [
            {
                "name": "popup",
                "src": "src/popup.js"
            },
            {
                "name": "content_script",
                "src": "src/content_script.js"
            },
            {
                "name": "env",
                "src": "src/env.js"
            }
        ]
    },
    "dependencies": {
        "@google/generative-ai": "^0.2.0",
        "dotenv": "^16.4.1"
    }
}
